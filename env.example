# FlowMail Environment Variables Template
# Copy this file to .env.local for development
# For production, add these to Vercel environment variables

# ===========================================
# DATABASE (Supabase)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# WHOP APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_WHOP_COMPANY_ID=your_whop_company_id
WHOP_API_KEY=your_whop_api_key
WHOP_WEBHOOK_SECRET=your_whop_webhook_secret

# ===========================================
# PLAN IDs (Get from Whop Dashboard)
# ===========================================
WHOP_STARTER_PLAN_ID=plan_8kwlWN9KRLgBz
WHOP_GROWTH_PLAN_ID=plan_5XSDwCIf1wjsI
WHOP_PRO_PLAN_ID=plan_YHLJsUruy51wy

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
RESEND_API_KEY=your_resend_api_key

# ===========================================
# AUTHENTICATION (NextAuth)
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ===========================================
# OPTIONAL: CUSTOM DOMAIN
# ===========================================
CUSTOM_DOMAIN=your_custom_domain.com
